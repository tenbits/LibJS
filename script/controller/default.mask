
layout:master #viewFull {


		scroller.maximized > @placeholder #content;


}

layout:master #view {

		header {
			.header-content {
				.title style='float:right; text-align:right;' {
					@placeholder #title;
				}
	
				@placeholder #tabs;
			}
		}
		
		@placeholder #side-menu {
			:tabs .side-menu {
				@panels
					> @placeholder;
			
				:animation #show {
					'transform | translateX(100%) > translateX(0%) | 200ms ease-in'
				}
			}
		}
		
		scroller {
			@placeholder #content;
		}

}
