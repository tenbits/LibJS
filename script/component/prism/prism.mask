
header {
    'Source Highlighter Component'
    a.github-ribbon href='https://github.com/tenbits/Compos';
}

scroller.content {
    div.container.tabPanel {
        div.api.active {
            
            div {
                'Based on '
                a href='http://prismjs.com/' > 'Prism Library'
            }
            
            p > code > " > {compos}/prism/lib/prism.js"
            p > code > " include.js({ compo : 'prism' })"
            
            div > 'Markup example:'
            prism > 'prism > "Source Code"'
            div > 'Attributes:'
            ul > li > code > "? src='' path to load source code from. Trailing slash - path from project root, without - path relative to current"
        }
    }
}

footer {
    radioButtons{
        button.active name='api' > 'API'        
    }
}