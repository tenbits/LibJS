
header {
    'Time Picker Component'
    a.github-ribbon href='https://github.com/tenbits/Compos';
}

div.content.scroller > div {
    div.container.tabPanel {
        div.api.active {
            div {
                'Based on '
                a href='http://mobiscroll.com/' > 'MOBISCROLL'
            }
            
            p > code > " > {compos}/timePicker/lib/timePicker.js"
            p > code > " include.js({ compo : 'timePicker' })"
            
            div > 'Markup example:'
            prism > 'timePicker;'
            
            prism > 'app.findCompo("timePicker").$./** read mobi scroll docs */'
            
            p {
                timePicker;
            }
        }       
    }
}

footer {
    radioButtons{
        button.active name='api' > 'API'        
    }
}