
header {
    'Date Picker Component'
    a.github-ribbon href='https://github.com/tenbits/Compos';
}

scroller.content {
    div.container.tabPanel {
        div.api.active {
            div {
                'Based on '
                a href='https://github.com/glad/glDatePicker/' > 'glDatePicker'
            }
            
            p > code > " > {compos}/datePicker/lib/datePicker.js"
            p > code > " include.js({ compo : 'datePicker' })"
            
            div > 'Markup example:'
            prism > 'datePicker#myDatePicker;'
            
            prism > 'Compo.find(app, "#myDatePicker").getDate()'
            prism > 'Compo.find(app, "#myDatePicker").setDate(new Date())'
            
            p {
                datePicker cssName='android';
            }
        }       
    }
}

footer {
    radioButtons{
        button.active name='api' > 'API'        
    }
}