layout:view master='view' {

    title {
        a href='https://github.com/tenbits/ClassJS' target=_blank> 'github@ClassJS';
    }




    tabs {
        radioButtons {
            button.active name='info' > 'Info'
            button name='api' > 'API'
        }
    }


    content > .container.tabPanel {
        div.info.active {
            h5 >  'Fastest Class implementation for modern browsers'
            p {
                'Check out speed comparison: '
                a href='http://jsperf.com/class-libjs-vs-others' target='_blank' > 'jsperf.com'
            }
            ul {
                li > 'Lightweight'
                li > 'Proper inheritance initialization with all constructors call'
                li { tt > 'instanceof works' }
                li > 'Static properties'
                li {
                    'Size'
                    div.hint > 'Compiled: 1.3KB'
                }
                li > 'No Dependencies'
            }
        }
        div.api > prism src='/api.help/class.api.js';
    }

}
