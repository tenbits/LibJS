layout:view master='view' {

	title {
		a.github-ribbon target='_blank' href='https://github.com/tenbits/RAnimateJS';
	}

	tabs {
		radioButtons{
			button.active name='info' > 'Info'
			button name='api' > 'API'
			button name='example' > 'Example'
		}
	}

	content {
		div.container.tabPanel {
			div.info.active {
				h5 > 'CSS3 Animation Library'
				hr;
				ul {
					li {
						'CSS property animations'
						div > prism > 'ruqq.animate(element,propertyName,valueTo, ?duration, ?callback, ?valueFrom, ?timing)'
					}
					li {
						'Complex animation models'
						div > prism > "
{
	model:{String|Object|Array},
	next: {String|Object|Array}
}
"
						small > div > prism > "

new ruqq.animate.Model({
	model: [{
	model: 'transform | translate(0px, 0px) > translate(300px, 300px) | 1s',
	next: {
		model: 'transform | scale(1) > translate(200px, 200px) scale(.5) | 600ms',
			next: [
			'transform | scale(.5) > scale(1.5) | 2s',
			'opacity | 1 > 0 | 4s',
			'background-color | > violet | 1s']
		}
	}, {
		model: 'background-color | > blue | 1s',
		next: 'background-color | > yellow | 1s',
	}],
	next: {
		model: 'opacity | 0 > 1 | 3s'
	}
})

						"
						div.hint {
							'Supports Transorms:'
							ul {
								li > 'No vendor prefix needed'
								li {
									'Track transformation model, so that ' tt > "transform | > scale(1) | 1s"
									' wont override previously set ' tt > "transform | rotate(0deg) > rotate(45deg) | 10s"
								}
							}
						}
					}
					li {
						'Sprite animations'
						div.hint > 'dynamic keyframes'
						div > prism >
							"
ruqq.animate.sprite.create({id:ID,frameWidth:X, frames:N});
ruqq.animate.sprite.start($element, ID, msperframe);
							"
					}
				}


			}
			div.api > prism src='/api.help/ranimation.api.js';

			div.example {
				div style='
						position:absolute;
						z-index: 0;
						width:80%;
						top:10px;
						right:10px;
						color:#888;
						font-weight:bold;
						font-family: monospace;' {

					pre > formatter:pre > "
{
    model: [{
        model: 'transform | translate(0px, 0px) > translate(300px, 300px) | 1s',
        next: {
            model: 'transform | scale(1) > translate(200px, 200px) scale(.5) | 600ms',
            next: [
                'transform | scale(.5) > scale(1.5) | 900ms', 'opacity | 1 > 0 | 1s',
                'background-color | > violet | 1s'
            ]
        }
    }, {
        model: 'background-color | > blue | 1s',
        next: 'background-color | > yellow | 1s',
    }],
    next: {
        model: 'opacity | 0 > 1 | 1.5s',
        next: [
            'transform | rotate(0deg) > scale(1) rotate(360deg) translate(0px,0px) | 2s',
            'background-color | > rgb(240,10,10) | 2s ease-in'
        ]
    }
}

					"
				}

				div style='position:relative; z-index:1' {
					div#ranimateExample style='height:100px; width:100px; background:rgb(240,10,10);';
					button name='start' > 'Start'
				}



			}
		}
	}

}
