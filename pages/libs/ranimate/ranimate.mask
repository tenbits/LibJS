layout:view master='view' {

	title {
		a.github-ribbon target='_blank' href='https://github.com/tenbits/RAnimateJS';
	}

	tabs {
		radioButtons{
			button.active name='info' > 'Info'
			button name='api' > 'API'
			button name='example' > 'Example'
		}
	}

	content {
		div.container.tabPanel {
			div.info.active {
				h5 > 'CSS3 Animation Library'
				hr;
				ul {
					li {
						'CSS property animations'
						div > prism > 'ruqq.animate(element,propertyName,valueTo, ?duration, ?callback, ?valueFrom, ?timing)'
					}
					li {
						'Complex animation models'
						div > prism > formatter:pre > "{\n\t model:{String|Object|Array},\n\t next: {String|Object|Array} \n }"
						small > div > prism > formatter:pre > "
							new ruqq.animate.Model({\n
							\t	model: [{\n
							\t\t\t	model: 'transform | translate(0px, 0px) > translate(300px, 300px) | 1s',\n
							\t\t\t	next: {\n
							\t\t\t\t		model: 'transform | scale(1) > translate(200px, 200px) scale(.5) | 600ms',\n
							\t\t\t\t			next: [ \n
							\t\t\t\t\t			'transform | scale(.5) > scale(1.5) | 2s', \n
							\t\t\t\t\t			'opacity | 1 > 0 | 4s', \n
							\t\t\t\t\t			'background-color | > violet | 1s']\n
							\t\t\t\t		}\n
							\t\t	}, {\n
							\t\t\t		model: 'background-color | > blue | 1s',\n
							\t\t\t		next: 'background-color | > yellow | 1s',\n
							\t\t	}],\n
							\t	next: {\n
							\t\t		model: 'opacity | 0 > 1 | 3s'\n
							\t	}\n
							})

						"
						div.hint {
							'Supports Transorms:'
							ul {
								li > 'No vendor prefix needed'
								li {
									'Track transformation model, so that ' tt > "transform | > scale(1) | 1s"
									' wont override previously set ' tt > "transform | rotate(0deg) > rotate(45deg) | 10s"
								}
							}
						}
					}
					li {
						'Sprite animations'
						div.hint > 'dynamic keyframes'
						div > prism > formatter:pre >
							"
							ruqq.animate.sprite.create({id:ID,frameWidth:X, frames:N});\n
							ruqq.animate.sprite.start($element, ID, msperframe);\n
							"
					}
				}


			}
			div.api > prism src='/api.help/ranimation.api.js';

			div.example {
				div style='
						position:absolute;
						z-index: 0;
						width:80%;
						top:10px;
						right:10px;
						color:#888;
						font-weight:bold;
						font-family: monospace;' {

					pre > formatter:pre > "
						{\n
						\t	model: [{\n
						\t\t		model: 'transform | translate(0px, 0px) > translate(300px, 300px) | 1s',\n
						\t\t		next: {\n
						\t\t\t			model: 'transform | scale(1) > translate(200px, 200px) scale(.5) | 600ms',\n
						\t\t\t			next: [ \n
						\t\t\t\t				'transform | scale(.5) > scale(1.5) | 900ms', 'opacity | 1 > 0 | 1s', \n
						\t\t\t\t				'background-color | > violet | 1s'\n
						\t\t\t			]\n
						\t\t		}\n
						\t	}, {\n
						\t\t		model: 'background-color | > blue | 1s',\n
						\t\t		next: 'background-color | > yellow | 1s',\n
						\t	}],\n
						\t	next: {\n
						\t\t		model: 'opacity | 0 > 1 | 1.5s',\n
						\t\t		next: [\n
						\t\t\t			'transform | rotate(0deg) > scale(1) rotate(360deg) translate(0px,0px) | 2s',\n
						\t\t\t			'background-color | > rgb(240,10,10) | 2s ease-in'\n
						\t\t		]\n
						\t	}\n
						}

					"
				}

				div style='position:relative; z-index:1' {
					div#ranimateExample style='height:100px; width:100px; background:rgb(240,10,10);';
					button name='start' > 'Start'
				}



			}
		}
	}

}
