        a href='https://github.com/tenbits/Compos/blob/master/datePicker/lib/datePicker.js' target='_blank' > 'github/compos/datePicker.js'   
    }
    attributes {
        '...'
    } 
    component {
        tr {
            td > '.setDate(date:Date)'
